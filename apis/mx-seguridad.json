                    },
                    "descripcionTipoIdentificacion": {
                      "type": "string",
                      "example": "CEDULA"
                    },
                    "razonSocial": {
                      "type": "string",
                      "example": "DESARROLLOS MX"
                    },
                    "nombreComercial": {
                      "type": "string",
