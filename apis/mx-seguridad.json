    },
    "/tipos_identificacion": {
      "get": {
        "tags": ["Tipos Identificacion"],
        "description": "Obtener listado de los tipos de identificacion.",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "estado",
            "in": "query",
