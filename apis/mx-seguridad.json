        ],
        "responses": {
          "200": {
            "description": "Respuesta correcta.",
            "schema": {
              "type": "object",
              "properties": {
                "code": {
                  "type": "number",
                  "default": 200
                },
                "status": {
                  "type": "boolean",
                  "default": true
                },
                "message": {
                  "type": "string",
                  "default": "ok"
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "codigoCliente": {
                      "type": "number",
                      "example": 1
                    },
                    "numeroIdentificacion": {
                      "type": "string",
                      "example": "0950637975"
                    },
                    "codigoTipoIdentificacion": {
                      "type": "number",
