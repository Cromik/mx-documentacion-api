                    },
                    "placa": {
                      "type": "string",
                      "example": "ABC-1234"
                    },
                    "estado": {
                      "type": "string",
                      "enum": ["A", "I", "T"]
                    }
                  }
                }
              }
            }
          }
        },
        "security": []
